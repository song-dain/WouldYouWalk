<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".RouteRecordFragment"
                                                   android:background="@color/white">

    <TextView
            android:text="이 코스 어때?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="30dp"
            android:fontFamily="@font/chosungu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp" android:textColor="@color/wywColor"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.083"/>
    <com.google.android.gms.maps.MapView
            android:id="@+id/mapview"
            android:layout_width="371dp"
            android:layout_height="283dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"/>
    <Button
            android:text="인사동길 - 열린녹지광장"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/walk1"
            android:backgroundTint="@color/tagBtn1"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/mapview"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:textSize="14sp"/>
    <Button
            android:text="북촌한옥마을"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/walk2"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="13sp" android:backgroundTint="@color/tagBtn4"
            app:layout_constraintTop_toBottomOf="@+id/walk1" android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"/>
    <Button
            android:text="광화문광장-광화문"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/walk3"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginEnd="20dp" app:layout_constraintTop_toBottomOf="@+id/mapview"
            android:layout_marginTop="15dp" android:textSize="14sp" android:backgroundTint="@color/tagBtn2"
            app:layout_constraintStart_toEndOf="@+id/walk1" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="남산둘레길 - 해방촌"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/tagBtn3" app:layout_constraintStart_toEndOf="@+id/walk2"
            android:layout_marginStart="5dp" android:id="@+id/testBtn1"
            app:layout_constraintTop_toBottomOf="@+id/walk3" android:layout_marginTop="3dp"/>
    <Button
            android:text="경복궁"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/tagBtn4"
            android:id="@+id/testBtn3"
            app:layout_constraintTop_toBottomOf="@+id/walk2"
            android:layout_marginTop="3dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="서울숲"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/tagBtn1"
            android:id="@+id/testBtn2"
            app:layout_constraintStart_toEndOf="@+id/testBtn1"
            android:layout_marginStart="5dp" app:layout_constraintTop_toBottomOf="@+id/walk3"
            android:layout_marginTop="3dp"/>
    <Button
            android:text="마곡서울식물원"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/tagBtn5"
            android:id="@+id/testBtn4"
            app:layout_constraintTop_toBottomOf="@+id/testBtn1"
            android:layout_marginTop="3dp" app:layout_constraintStart_toEndOf="@+id/testBtn3"
            android:layout_marginStart="14dp"/>
    <Button
            android:text="석촌호수"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/tagBtn1"
            android:id="@+id/testBtn5"
            app:layout_constraintStart_toEndOf="@+id/testBtn4"
            android:layout_marginStart="14dp" app:layout_constraintTop_toBottomOf="@+id/testBtn2"
            android:layout_marginTop="3dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.086"/>
    <ImageView
            android:src="@drawable/mainicon"
            android:layout_width="54dp"
            android:layout_height="53dp" android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.876" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>