<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainFragment">
    <!--android:background="#EFFDE0">-->


    <TextView
            android:text="오늘 날씨 어때?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="30sp"
            android:fontFamily="@font/chosungu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            android:textColor="@color/wywColor" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp"/>
    <ImageView
            android:src="@drawable/timericon3"
            android:layout_width="429dp"
            android:layout_height="630dp" android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="84dp"/>
    <ImageView
            android:src="@drawable/sun"
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:id="@+id/weather_ic"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.752"
            android:layout_marginStart="5dp"/>
    <TextView
            android:id="@+id/weather_tv"
            android:textSize="25sp"
            android:text="날씨"
            android:fontFamily="@font/suitregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="36dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="168dp"
    />
    <TextView
            android:id="@+id/temperature_tv"
            android:textSize="170dp"
            android:fontFamily="@font/chosungu"
            android:text="기온"
            android:textColor="@color/tagBtn4"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_tv" android:layout_marginTop="16dp"/>
    <TextView
            android:text="날씨 설명"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weatherTip_tv"
            android:textSize="25dp"
            android:fontFamily="@font/chosungu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temperature_tv" android:layout_marginTop="28dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:src="@drawable/timericon2"
            android:layout_width="408dp"
            android:layout_height="513dp" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="388dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.333"/>
    <ImageView
            android:src="@drawable/weathericon"
            android:layout_width="63dp"
            android:layout_height="76dp" android:id="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/weatherTip_tv"
            android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>