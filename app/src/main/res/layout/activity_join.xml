<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".JoinActivity">

    <ImageView
            android:layout_width="264dp"
            android:layout_height="126dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"
            app:layout_constraintHorizontal_bias="0.496"/>

    <EditText
            android:layout_width="288dp"
            android:layout_height="48dp"
            android:textSize="14dp"
            android:background="@drawable/edittext_rounded_corner_box"
            android:inputType="textEmailAddress"
            android:hint="   이메일을 입력하세요."
            android:ems="10"
            android:id="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:layout_width="288dp"
            android:layout_height="48dp"
            android:textSize="14dp"
            android:background="@drawable/edittext_rounded_corner_box"
            android:inputType="textPersonName"
            android:hint="   이름을 입력하세요."
            android:ems="10"
            android:id="@+id/name"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintTop_toBottomOf="@+id/email"
            android:layout_marginTop="12dp"/>
    <EditText
            android:layout_width="288dp"
            android:layout_height="48dp"
            android:textSize="14dp"
            android:background="@drawable/edittext_rounded_corner_box"
            android:inputType="textPassword"
            android:hint="   비밀번호를 입력하세요."
            android:ems="10"
            android:id="@+id/password"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:text="가입하기"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:id="@+id/joinButton"
            android:backgroundTint="#80C748"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/cancel_button"
            app:layout_constraintHorizontal_bias="0.901" app:layout_constraintTop_toBottomOf="@+id/password"
            android:layout_marginTop="24dp"/>
    <Button
            android:text="돌아가기"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:id="@+id/cancel_button"
            android:backgroundTint="#80C748"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/password" android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>